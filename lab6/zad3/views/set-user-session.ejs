<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="../public/css/styles.css">
</head>

<body>
    <h1>Set User</h1>
    <% if (users.length> 0) { %>
        <form action="/user/set" method="POST">
            <div>
                <label>User</label>
                <select name="userId">
                    <% users.forEach(user=> { %>
                        <option value="<%= user.id %>">
                            <%= user.login %>
                        </option>
                        <% }); %>
                </select>
                <button type="submit">Set user</button>
            </div>
        </form>
        <% } else { %>
            <p>Sorry, no users have been found.</p>
            <% } %>
                <% include partials/back %>
</body>

</html>